<Page x:Class="NBA.Pages.VisitorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisitorMenu">

    <Grid VerticalAlignment="Center" 
          HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Margin="10">

            <StackPanel Orientation="Horizontal" 
                        Grid.Row="0">
                <Image Source="/Resources/logo.jpg" 
                       Width="20"/>
                <TextBlock Text="NBA Management System"
                           FontSize="15"
                           Margin="10 15 0 0"/>
                <TextBlock Text="Visitor Menu"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="100 10 0 0"/>
                <Border Width="50"
                        Height="20"
                        CornerRadius="3" 
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        Margin="300 0 0 0">
                    <Button x:Name="BTBack" 
                            Width="50" 
                            Height="20" 
                            Click="BTBack_Click"
                            BorderBrush="LightGray">
                        <TextBlock Text="Back"
                                   Margin="0 -3 4 0"/>
                    </Button>
                </Border>
            </StackPanel>
            <Border BorderBrush="Black"
                    BorderThickness="0.5"
                    Margin="0 5 0 30"/>

            <StackPanel Grid.Row="1">
                <Border Margin="20 0 20 0" 
                        Height="300" 
                        BorderBrush="Black" 
                        BorderThickness="1">

                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"> 
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 0 0 50">
                            <Button x:Name="BTTeams"
                                    Width="150" 
                                    Height="40" 
                                    Margin="0 0 100 0"
                                    Content="Teams"
                                    Click="BTTeams_Click"/>
                            <Button Width="150" 
                                    Height="40"
                                    Content="Players" Click="Players_Clieck"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Width="150"
                                    Height="40"
                                    Margin="0 0 100 0"
                                    Content="Matchups"/>
                            <Button Width="150" 
                                    Height="40"
                                    Content="Photos"/>
                        </StackPanel>
                    </StackPanel>
                    
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">
                <TextBlock Text="gggggggggggggggggggggggggggggg"/>
            </StackPanel>
            
        </StackPanel>

    </Grid>
</Page>
