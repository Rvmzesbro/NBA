<Page x:Class="NBA.Pages.PlayersMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayersMain">

    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <StackPanel Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/logo.jpg" 
                    Width="20"/>
                    <TextBlock Text="NBA Management System"
                        FontSize="15"
                        Margin="10 15 0 0"/>
                    <TextBlock Text="Players Main"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Margin="100 10 0 0"/>
                    <Border Width="50"
                     Height="20"
                     CornerRadius="3" 
                     BorderBrush="LightGray"
                     BorderThickness="1"
                     Margin="300 0 0 0">
                        <Button x:Name="BTBack" 
                         Width="50" 
                         Height="20" 
                         Click="BTBack_Click"
                         BorderBrush="LightGray">
                            <TextBlock Text="Back"
                                Margin="0 -3 4 0"/>
                        </Button>
                    </Border>
                </StackPanel>
                <Border BorderBrush="Black"
                 BorderThickness="0.5"
                 Margin="0 5 0 30"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <Border Height="50"
                        Background="#6995c2">
                    <StackPanel>
                        
                        <StackPanel Orientation="Horizontal" 
                                    x:Name="SPFilterButtons">

                            <CheckBox Background="#6995c2"
                                      BorderBrush="#6995c2" 
                                      Content="All"/>

                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    >
                            <TextBlock Text="Season:"
                                       Margin="0 0 5 0"/>
                            <ComboBox x:Name="CBSeason"
                                      Width="100"
                                      Height="20">
                                
                            </ComboBox>

                            <TextBlock Text="Team:"
                                       Margin="30 0 5 0"/>
                            <ComboBox x:Name="CBTeam"
                                      Width="100"
                                      Height="20">

                            </ComboBox>

                            <TextBlock Text="Playername:"
                                       Margin="30 0 5 0"/>
                            <TextBox x:Name="TBSearchName"
                                     Width="100"
                                     Height="20"
                                     Text="Name"
                                     GotFocus="TBSearchName_GotFocus"
                                     LostFocus="TBSearchName_LostFocus"/>
                        </StackPanel>
                    </StackPanel>
                    
                    
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <DataGrid x:Name="DGPlayers"
                          SelectionChanged="DGPlayers_SelectionChanged"
                          MouseDoubleClick="DGPlayers_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn/>
                        <DataGridTextColumn Header="No."/>
                        <DataGridTextColumn Header="Name"/>
                        <DataGridTextColumn Header="Team"/>
                        <DataGridTextColumn Header="Position"/>
                        <DataGridTextColumn Header="Weight"/>
                        <DataGridTextColumn Header="Height"/>
                        <DataGridTextColumn Header="Experience"/>
                        <DataGridTextColumn Header="Country"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Text="fsdfdsf"/>
            </StackPanel>

            

        </StackPanel>
        <Border Grid.Row="2" 
            Background="#6995c2"
            Height="20"
            VerticalAlignment="Bottom">
            <TextBlock Text="The current season is 2016-2017, and the NBA already has a history of 71 years"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
