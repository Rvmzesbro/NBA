<Page x:Class="NBA.Pages.TeamDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeamDetail">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <StackPanel Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/logo.jpg" 
                    Width="20"/>
                    <TextBlock Text="NBA Management System"
                        FontSize="15"
                        Margin="10 15 0 0"/>
                    <TextBlock Text="Teams Detail"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Margin="100 10 0 0"/>
                    <Border Width="50"
                     Height="20"
                     CornerRadius="3" 
                     BorderBrush="LightGray"
                     BorderThickness="1"
                     Margin="300 0 0 0">
                        <Button x:Name="BTBack" 
                         Width="50" 
                         Height="20" 
                         Click="BTBack_Click"
                         BorderBrush="LightGray">
                            <TextBlock Text="Back"
                                Margin="0 -3 4 0"/>
                        </Button>
                    </Border>
                </StackPanel>
                <Border BorderBrush="Black"
                 BorderThickness="0.5"
                 Margin="0 5 0 30"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Image/>
                    <TextBlock Text="Team Name"/>
                    <TextBlock Text="|"/>
                    <TextBlock Text="Division Name"/>
                    <TextBlock Text="of"/>
                    <TextBlock Text="Conference Name"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TabControl Height="250" Width="768">
                        <TabItem Header="Roster">
                            
                        </TabItem>
                        
                        <TabItem Header="Matchup">
                        
                        </TabItem>

                        <TabItem Header="Lineup">

                        </TabItem>
                        
                    </TabControl>
                    <StackPanel>
                        <ComboBox Margin="-1000 0 0 210"
                                  Width="100"
                                  Height="15">
                            <!--Binding-->
                        </ComboBox>
                        
                    </StackPanel>
                    
                </StackPanel>
            </StackPanel>


            <StackPanel Grid.Row="2" HorizontalAlignment="Center"
    VerticalAlignment="Bottom">
                <TextBlock Text="gggggggggggggggggggggggggggggg"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
