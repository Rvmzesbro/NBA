<Page x:Class="NBA.Pages.MainScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainScreen">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        

        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resources/logo.jpg"
                       Width="50"
                       Margin="10"/>

                <TextBlock Text="NBA Management System"
                           Margin="100 0 0 0"
                           FontSize="40"
                           VerticalAlignment="Center"
                               />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock FontSize="20"
                               Text="Welcome to use this NBA Management system, you can"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock FontSize="20" 
                               Text="redirect to different pages according to your role by clicking the buttons bellow."/>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="10">
                <Border Width="400"
                        Height="200"
                        BorderThickness="1" 
                        BorderBrush="black">
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center">
                        <Button x:Name="BTVisitor"
                                Width="100" 
                                Height="40" 
                                Content="Visitor" 
                                Margin="0 0 20 0"
                                Click="BTVisitor_Click"
                                />
                        <Button x:Name="BTAdmin"
                                Width="100" 
                                Height="40" 
                                Content="Admin"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Border Height="150" BorderBrush="Black" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ListView Name="Photos" Grid.Column="1">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel></WrapPanel>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Photo}"></Image>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    HorizontalAlignment="Center">
            <TextBlock Text="gggggggggggggggggggggggggggggg"/>
        </StackPanel>

    </Grid>
</Page>
